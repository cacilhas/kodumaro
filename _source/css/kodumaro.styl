@import "_mixins.styl"

@font-face
  font-family "SF Mono"
  src url("//misc.cacilhas.cc/fonts/sfmono.ttf") format("truetype"),
      url("//misc.cacilhas.cc/fonts/sfmono.woff2") format("woff2")
  font-weight normal
  font-style normal

$code = #dd8800
$text_color = #ffddaa
$bg_color = #443322
$link_color = #8888ff
$tag_color = white
$badge_color = $code
$shadow = $code

body
  background-image url(/img/background.jpg) !important
  background-repeat repeat !important
  background-attachment fixed !important
  background-position initial !important
  background-origin initial !important
  background-clip initial !important

.panel-body
  color  $text_color
  background-color $bg_color

  a
    color $link_color !important

.panel-heading
  color white !important
  background-image url(/img/title-background.jpg) !important
  background-repeat repeat-x !important
  background-position center !important
  bg-size cover !important

  h2
    text-shadow $shadow 2px 2px 2px
    text-transform capitalize

  h6
    text-shadow $shadow 1px 1px 1px

h3
  color $code !important

li,
p,
tr
  code
    color $code !important
    background-color inherit !important

h3,
a
  code
    color inherit !important
    background-color inherit !important

code
  font-family "SF Mono", Monaco, monospace !important
  font-variant-ligatures normal

pre
  padding: 0px

.tag
  border: 1px solid gray !important
  border-radius: 5px !important
  color: $tag_color !important
  font-family "Roboto Mono", Monaco, monospace !important
  padding: 0px 2px 0px 2px !important

  a
    color: $tag_color !important


.label-default
  background-color $badge_color !important


.badge
  background-color: $badge_color !important

.panel-body
  ul
    list-style none

    li:before
      content '\27a2'
      display inline-block
      font-weight bold
      margin-left -1em
      margin-right 1ex
      width 1em

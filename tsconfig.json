{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "esModuleInterop": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "typeRoots": ["./node_modules/@types"],
    "types": [ "node" ]
  },
  "include": [ "*.ts" ],
  "exclude": [ "node_modules" ]
}
